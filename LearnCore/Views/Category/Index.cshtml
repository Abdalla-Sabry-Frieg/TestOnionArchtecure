@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container"  >

    <partial name="_PV_Notifications"/>

    <div class="row">
        <div class="col-6">
            <h3 class="text-primary">Items View</h3>
        </div>
        <div class="col-6 p-3 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create" >
            <i class="bi bi-plus"></i> &nbsp;  Add new Category
            </a>
        </div>

    </div>

    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
               
                <th class="text-center" scope="row">Category Name</th>
                <th class="text-center" scope="row">Category Image</th>
                
                <th class ="text-center" scope="row"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-active text-center ">
                    <td class="text-center" scope="row">
                        @item.Name
                    </td>
                    <td class="text-center" scope="row">
                        <img src="/Images/@item.ImageSrc" style="width:35px ; height:35px;" />
                    </td>
                    <td class="text-center m-3" width=30%>
                        <a class="btn btn-success btn-sm" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                        &nbsp; |  &nbsp;
                        <a class="btn btn-danger btn-sm" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Delete">
                            <i class="bi bi-trash3"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>


