@model Category
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div>
            <input type="file" asp-for="clientFile" onchange="loadFile(event)" />
            <img id="myImage" height="200px" />

        </div>
        <br />
        <hr />
        <button type="submit" class="btn btn-primary pt-2">Save Changes</button>
        <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Back to Categories</a>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var loadFile = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var myImage = document.getElementById('myImage');
                myImage.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);

        }
    </script>
}

