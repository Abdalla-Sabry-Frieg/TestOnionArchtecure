@model LearnCore.Models.Item

@{
    ViewData["Title"] = "Delete";
}




<form method="post" asp-action="DeleteItems" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Item</h2>
            <hr />
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span class="text-danger" asp-validation-for="Price"></span>

        </div>

        <div class="mb-3">
            <label asp-for="CreatedAt"></label>
            <input asp-for="CreatedAt" class="form-control" />
            <span class="text-danger" asp-validation-for="CreatedAt"></span>
         </div>
        <div>
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories"></select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>

        </div>
        <div>
            <input type="file" asp-for="clientFile" onchange="loadFile(event)" />
            <img id="myImage" height="200px" />

        </div>
            <br />
            <hr />
            <button type="submit" class="btn btn-primary">Delete</button>
            <a class="btn btn-secondary" asp-controller="Items" asp-action="Index">Back to items</a>

       
       
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var loadFile = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var myImage = document.getElementById('myImage');
                myImage.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);

        }
    </script>
}

